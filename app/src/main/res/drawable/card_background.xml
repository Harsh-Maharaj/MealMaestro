<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect -->
    <item android:bottom="4dp" android:right="4dp">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Light shadow color -->
            <corners android:radius="16dp" /> <!-- Slightly larger corner radius -->
        </shape>
    </item>

    <!-- Main Card Background -->
    <item>
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F8F8F8"
                android:angle="45" /> <!-- Soft gradient from white to light gray -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#DDDDDD" /> <!-- Softer border -->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</layer-list>
